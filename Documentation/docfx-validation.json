{
    "metadata": [
        {
            "src": [
                {
                    "src": "../Packages/com.nickmaltbie.openkcc",
                    "files": [
                        "**/*.cs"
                    ]
                },
                {
                    "src": "../Packages/com.nickmaltbie.openkcc.netcode",
                    "files": [
                        "**/*.cs"
                    ]
                },
                {
                    "src": "../Assets/Samples",
                    "files": [
                        "**/*.cs"
                    ]
                }
            ],
            "globalNamespaceId": "Global",
            "filter": "filterConfig.yml",
            "dest": "api"
        }
    ],
    "build": {
        "template": [
            "default",
            "templates/custom"
        ],
        "globalMetadata": {
            "_appTitle": "OpenKCC Documentation",
            "_appFooter": "OpenKCC Documentation",
            "_enableSearch": true
        },
        "content": [
            {
                "files": [
                    "toc.yml",
                    "*.md"
                ]
            },
            {
                "src": "api",
                "files": [
                    "toc.yml",
                    "*.yml"
                ],
                "dest": "api"
            },
            {
                "src": "changelog",
                "files":
                [
                    "toc.yml",
                    "*.md"
                ],
                "dest": "changelog"
            },
            {
                "src": "manual",
                "files": [
                    "toc.yml",
                    "**/*.md"
                ],
                "dest": "manual"
            }
        ],
        "overwrite": [
            {
                "src": "../Packages/com.nickmaltbie.openkcc",
                "files": [
                    "**/*.cs"
                ]
            },
            {
                "src": "../Packages/com.nickmaltbie.openkcc.netcode",
                "files": [
                    "**/*.cs"
                ]
            },
            {
                "src": "../Assets/Samples",
                "files": [
                    "**/*.cs"
                ]
            }
        ],
        "resource": [
            {
                "src": ".",
                "files": [
                    "Demo/**/*",
                    "LICENSE.txt"
                ]
            },
            {
                "src": ".",
                "files": [
                    "resources/**/*"
                ]
            }
        ],
        "sitemap": {
            "baseUrl": "https://nickmaltbie.com/OpenKCC/docs",
            "changefreq": "weekly",
            "fileOptions": {
                "api/*": {
                    "changefreq": "daily"
                }
            }
        },
        "xref": [
            "https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml",
            "https://nickmaltbie.com/TestUtilsUnity/docs/xrefmap.yml",
            "https://docs.unity3d.com/Packages/com.unity.inputsystem@1.4/xrefmap.yml"
        ],
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "dest": "../_site"
    }
}